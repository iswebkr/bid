<?xml version="1.0" encoding="UTF-8"?>
<jboss-deployment-structure xmlns="urn:jboss:deployment-structure:1.3">
	<deployment>
		<exclude-subsystems>
			<subsystem name="logging"/>
		</exclude-subsystems>

		<!-- WAR 파일 내부의 Jakarta API 라이브러리 무시 -->
		<exclusions>
			<!-- Jakarta Servlet API -->
			<module name="jakarta.servlet.api"/>
			<module name="jakarta.servlet.jsp.api"/>
			<!-- Jakarta EL -->
			<module name="jakarta.el.api"/>
			<!-- Jakarta CDI -->
			<module name="jakarta.enterprise.api"/>
			<!-- Jakarta Persistence -->
			<module name="jakarta.persistence.api"/>
			<!-- Jakarta Validation -->
			<module name="jakarta.validation.api"/>
			<module name="org.apache.commons.logging"/>
			<module name="org.apache.log4j"/>
			<module name="org.slf4j"/>
			<module name="org.slf4j.impl"/>
		</exclusions>

		<!-- WildFly 모듈 명시적 로드 -->
		<dependencies>
			<module name="jakarta.servlet.api" export="true"/>
			<module name="jakarta.servlet.jsp.api" export="true"/>
			<module name="jakarta.el.api" export="true"/>
		</dependencies>
	</deployment>
</jboss-deployment-structure>